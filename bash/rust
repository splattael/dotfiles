function __rust() {
  docker run --rm -it \
    -u $UID \
    -e USER=$USER \
    -e CARGO_HOME=/source/.cargo \
    -v $HOME/.cargo:/source/.cargo \
    -v $(pwd):/source \
    schickling/rust "$@"
}

alias rust-shell="__rust"
alias rustc="__rust rustc"
alias cargo="__rust cargo"
alias rust-gdb="__rust rust-gdb"
alias rustdoc="__rust rustdoc"
