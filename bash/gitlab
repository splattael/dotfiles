#!/bin/bash

source $HOME/.bash/git

setup-git-gitlab() {
  setup-git GitLab pleitzen@gitlab.com
}

srs() {
  qsrs "$@"
}

qsrs() {
  bin/spring rspec --order "random:$RANDOM" "$@"
}

qsrs-loop() {
  while :; do
    qsrs "$@" || break
  done
}

srs-loop() {
  while :; do
    srs "$@" || break
  done
}
