alias gb='git branch -v'
alias gba='gb -a'
alias gc='git commit -v'
alias gca='gc -a'
alias gco='git checkout'
alias gc-='gco -'
alias gd='git diff'
alias gdw='git diff --word-diff'
alias gdc='git diff --cached'
alias ga='git add'
alias gaa='ga --all'
alias gl='git pull -v'
alias glr='git pull -v --rebase'
alias gg="git lg"
alias gp='git push -v'
alias gpu='git push -vu origin `git rev-parse --abbrev-ref HEAD`'
alias gpf='git push -v --force-with-lease'
alias grep='grep --colour=auto'
alias gst='git status -s'
alias gr='git grep'
alias gfa='git fetch --all --prune'
alias gwc='git log -p'
alias grs='git rebase --skip'
alias grc='git rebase --continue'
alias gra='git rebase --abort'

neogit() {
  git config user.name "Peter Leitzen"
  git config user.email "pl@neopoly.de"
  echo -n "Name: "
  git config user.name
  echo -n "E-Mail: "
  git config user.email
}


pgit() {
  git config user.name "Peter Leitzen"
  git config user.email "peter@leitzen.de"
  echo -n "Name: "
  git config user.name
  echo -n "E-Mail: "
  git config user.email
}
