#!/bin/bash

ARCH=$(uname -m)
ARCH_CMD=linux64
IMAGE=jhass/crystal-build-$ARCH

uid=$(id -u)
gid=$(id -g)

if [ "$1" = "PULL" ]; then
  echo "Pulling $IMAGE"
  docker pull $IMAGE
  exit 0
fi

docker run \
    --rm \
    -it \
    -u $uid:$gid \
    -v $(pwd):/mnt \
    -w /mnt \
    -e LIBRARY_PATH="/opt/crystal/embedded/lib/" \
    -e CRYSTAL_CONFIG_VERSION="ci" \
    $IMAGE \
    "$ARCH_CMD" $@
