#!/bin/bash

uid=$(id -u)
gid=$(id -g)
dir=/mnt
command=crystal

programm=$(basename $0)
tag=${programm/*-/} # crystal-0.17.4 -> 0.17.4

image=crystallang/crystal:$tag

echo "Running $image"

case "$1" in
  shell|bash|sh)
    command=bash
    shift
    ;;
  root)
    command=bash
    uid=0
    gid=0
    shift
    ;;
  crystal|shards|make)
    command=$1
    shift
    ;;
esac

docker run \
    --rm \
    -it \
    -u $uid:$gid \
    -v $(pwd):$dir \
    -w $dir \
    $image \
    $command "$@"
